
@{
    ViewBag.Title = "display";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>display</title>
</head>
<body>
    <span style="display:none;">
        <img id="map" onload="drawImage" src="~/Images/map.png" alt="The Map">
    </span>

    <div>
        <script src="~/scripts/jquery-3.0.0.min.js"> </script>
        <script>
            var img = document.getElementById("map");
            var imgs = new Image();
            var Lon = 0;
            var Lat = 0;
            imgs.src = './Images/map.png';
            var c = document.createElement("canvas");
            document.body.appendChild(c);
            c.width = img.width;
            c.height = img.height;
            var ctx = c.getContext("2d");
            ctx.lineWidth = 10;
            ctx.strokeStyle = '#00ff00';
            ctx.clearRect(0, 0, c.width, c.height);
            function drawImage() {
                ctx.drawImage(img, 0, 0);
            }
            function lonTrans(l, w){
                var half = w / 2;
                if (l < 0) {
                    l = ((half * l) / 180) * (-1);
                    l = l + half;
                }
                else {
                    l = ((half * l) / 180) * (-1);
                    l = half - l;
                }
                return l;
            }
            function latTrans(l, h){
                var half =h / 2;
                if (l < 0) {
                    l = ((half * l) / 90) * (-1);
                    l = l + half;
                }
                else {
                    l = ((half * l) / 90) * (-1);
                    l = half - l;
                }
                return l;
            }
            function loadCanvas() {
                drawImage();
                ctx.beginPath();
                ctx.strokeStyle = "red";
                ctx.arc(preLon, preLat, 20, 0, 20 * Math.PI, false);
                ctx.lineWidth = 3;
                ctx.fillStyle = "red";
                ctx.fill();
                ctx.stroke();
            }
            function randLon(){
                var min=-180;
                var max=180;
                var random = Math.random() * (+max - +min) + +min;
                return random;
            }
            function randLat(){
                var min=-90;
                var max=90;
                var random = Math.random() * (+max - +min) + +min;
                return random;
            }
            function loadLoc(){
                ctx.beginPath();
                ctx.strokeStyle = "red";
                ctx.moveTo(preLon, preLat);
                preLon = lonTrans(randLon(), img.width);
                preLat = latTrans(randLat(), img.height);
                myTimer();
                alert("lon: " + Lon + ", lat: " + Lat);
                ctx.lineTo(preLon, preLat);
                ctx.stroke();
            }
            var preLon = lonTrans(randLon(), img.width);
            var preLat = latTrans(randLat(), img.height);
            var IntervalTime = @Session["time"] * 1000
                    myTimer = (function () {
                        $.post( "@Url.Action("GetLocation")").done(function (xml) {
                                var xmlDoc = $.parseXML( xml ),
                                $xml = $( xmlDoc ),
                                Lon = $xml.find( "Lon" ).text();
                                Lat = $xml.find( "Lat" ).text();

                                $("#dataLon").text(Lon);
                                $("#dataLat").text(Lat);

                        });
                    });
            loadCanvas();
            if (@ViewBag.timeLoad > 0) {
                setInterval(loadLoc, IntervalTime);
            }
        </script>
    </div>
</body>
</html>
